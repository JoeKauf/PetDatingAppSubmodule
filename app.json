{
  "expo": {
    "name": "AdoptAPet",
    "slug": "AdoptAPet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses location to find pets near you.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Use location when using app.",
        "NSLocationAlwaysUsageDescription": "Use location when using app.",
        "UIBackgroundModes": [
          "location",
          "fetch"
        ],
        "photosPermission": "The app accesses your photos to let you share pictures of pets."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
	      "ACCESS_BACKGROUND_LOCATION"
	    ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
